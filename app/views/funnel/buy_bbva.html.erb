<div class="page-header">
  <h3>
    Precio por ser cliente de BBVA
  </h3>
</div>
<div class="row">
  <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">
    <b>Ver lógica aplicada</b>
  </button>
</div>
<div class="row funnel">
  <div class="col-md-4 text-center">
    <p><%= image_tag "nintendo.jpg" %></p>
    <h2>Nintendo Switch</h2>
    <div>
      <% nintendo_price = @prices[:nintendo] %>
      <h4 class="text-muted">Precio real: <%= number_to_currency(nintendo_price, unit: "€") %></h4>
      <h4 class="text-success">Descuento: <%= number_to_currency(nintendo_price * @discount, unit: "€") %></h4>
      <h3>Precio final: <%= number_to_currency(nintendo_price * (1.0 - @discount), unit: "€") %></h3>
      <p><%= link_to "Compra en un click", payment_path("nintendo"), class: "btn btn-primary btn-lg" %></p>
    </div>
  </div>
  <div class="col-md-4 text-center">
    <p><%= image_tag "iphone.jpg" %></p>
    <h2>iPhone 7</h2>
    <div>
      <% iphone_price = @prices[:iphone] %>
      <h4 class="text-muted">Precio real: <%= number_to_currency(iphone_price, unit: "€") %></h4>
      <h4 class="text-success">Descuento: <%= number_to_currency(iphone_price * @discount, unit: "€") %></h4>
      <h3>Precio final: <%= number_to_currency(iphone_price * (1.0 - @discount), unit: "€") %></h3>
      <p><%= link_to "Compra en un click", payment_path("iphone"), class: "btn btn-primary btn-lg" %></p>
    </div>
  </div>
  <div class="col-md-4 text-center">
    <p><%= image_tag "samsung.jpg" %></p>
    <h2>Samsung Gear S2</h2>
    <div>
      <% samsung_price = @prices[:samsung] %>
      <h4 class="text-muted">Precio real: <%= number_to_currency(samsung_price, unit: "€") %></h4>
      <h4 class="text-success">Descuento: <%= number_to_currency(samsung_price * @discount, unit: "€") %></h4>
      <h3>Precio final: <%= number_to_currency(samsung_price * (1.0 - @discount), unit: "€") %></h3>
      <p><%= link_to "Compra en un click", payment_path("samsung"), class: "btn btn-primary btn-lg" %></p>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><b>LÓGICA APLICADA</b></h4>
      </div>
      <div class="modal-body">
        <b><%= @text %></b><br/>
        <b class="text-success">Descuento cliente BBVA: <%= @discount * 100 %>%</b>
        <%= render partial: @partial %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
